# =============================================================================
# Theatre Backend - Development Dockerfile
# =============================================================================
# Включает hot reload через uvicorn --reload
# =============================================================================

FROM python:3.12-slim

# Метаданные
LABEL maintainer="Theatre Team"
LABEL description="Theatre Management System - Backend API (Development)"

# Переменные окружения Python и локаль
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONIOENCODING=utf-8 \
    PYTHONPATH=/app \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    LANG=C.UTF-8 \
    LC_ALL=C.UTF-8

# Рабочая директория
WORKDIR /app

# Установка системных зависимостей и локали
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    netcat-openbsd \
    locales \
    && rm -rf /var/lib/apt/lists/* \
    && echo "en_US.UTF-8 UTF-8" >> /etc/locale.gen \
    && locale-gen

# Копирование файла зависимостей
COPY pyproject.toml ./

# Установка Python зависимостей (включая dev зависимости)
RUN pip install --upgrade pip && \
    pip install -e ".[dev]"

# Копирование исходного кода (будет перезаписан volume в dev режиме)
COPY app/ ./app/
COPY alembic/ ./alembic/
COPY alembic.ini ./
COPY scripts/ ./scripts/

# Создание директории для хранилища
RUN mkdir -p /app/storage

# Порт приложения
EXPOSE 8000

# Запуск с hot reload
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
